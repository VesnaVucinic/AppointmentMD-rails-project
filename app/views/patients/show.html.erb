<% if flash[:notice] %>
<div class="notice"><%= flash[:notice] %></div>
<% end %>
<h1><strong><%= @patient.name %></strong></h1>
<br><br>
<% if @patient.appointments %>
<% @patient.appaointments.each do |appointment| %>
<ul>
<li><%= appointment.date %></li>
<li><%= appointment.time %></li>
</ul>
<% else %>
<%= "You currently have no appointments. Would you like to set a new appointment?" %>
<% end %>
<h3><p><%= link_to "See Physicians", physician_path %></p>
    <p><%= link_to "Edit Your Info", edit_patient_path(@patient) %></p>
    <p><%= link_to "To Go Back", patients_path %></p>
    <p><%= link_to "Log Out", logout_path %></p></h3>
